<Page x:Class="RecordsStoreExam.View.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RecordsStoreExam.View"
      mc:Ignorable="d" 
      d:DesignHeight="980" d:DesignWidth="1920"
      Title="ProfilePage">

    <DockPanel Name="MainDockPanel">
        <StackPanel>
            <Label Width="400" Height="100" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold" Name="CurrentLoginLabel">Your login: </Label>
            <Label Width="200" Height="100" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold" Background="Black" Foreground="White" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Name="ChangeLoginLabel" MouseDown="ChangeLoginLabel_MouseDown">Change login</Label>
        </StackPanel>
    </DockPanel>
</Page>
