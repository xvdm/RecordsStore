<Window x:Class="RecordsStoreExam.View.ChangeLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecordsStoreExam.View"
        mc:Ignorable="d"
        Title="ChangeLoginWindow" Height="250" Width="400">
    <DockPanel>
        <StackPanel>
            <Label FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold" >Enter new login</Label>
            <TextBox Height="100" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold" Name="LoginTextBox"></TextBox>
            <Label FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold" Foreground="White" Background="Black" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" MouseDown="Label_MouseDown">Done</Label>
        </StackPanel>
    </DockPanel>
</Window>
