<Page x:Class="RecordsStoreExam.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RecordsStoreExam"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Background="Gray"
      Title="MainPage">

    <DockPanel>
        <DockPanel Width="400" DockPanel.Dock="Left" Margin="0,40,0,0">
            <Label FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" DockPanel.Dock="Top">Performers</Label>
            <Label FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" DockPanel.Dock="Top">1</Label>
            <Label FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" DockPanel.Dock="Top">2</Label>
            <Label FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" DockPanel.Dock="Top">3</Label>
            <Label FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" DockPanel.Dock="Top">4</Label>
            <Label FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" DockPanel.Dock="Top">5</Label>
        </DockPanel>
        
        
        <DockPanel Width="400" DockPanel.Dock="Right" Margin="0,40,0,0">
            <Label FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" DockPanel.Dock="Top">Sorting</Label>
            <Label FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" DockPanel.Dock="Top">1</Label>
            <Label FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" DockPanel.Dock="Top">2</Label>
            <Label FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" DockPanel.Dock="Top">3</Label>
            <Label FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" DockPanel.Dock="Top">4</Label>
            <Label FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" DockPanel.Dock="Top">5</Label>
        </DockPanel>

        <DockPanel Height="100" Name="PaginationDockPanel" DockPanel.Dock="Bottom" Background="Black">
            <Label Height="100" Foreground="White" FontSize="30" Padding="27" Margin="0" Width="125" Content="Main" Name="LabelMain"></Label>
            <Label Height="100" Foreground="White" FontSize="30" Padding="27" Margin="0" Width="170" Content="Contacts" Name="LabelContacts"></Label>
            <Label Height="100" Foreground="White" FontSize="30" Padding="27" Margin="0" Width="135" Content="About" Name="LabelAbout"></Label>
        </DockPanel>
        
        <Grid Margin="0,40,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" Grid.Row="0">
                <Image Name="Image1" Width="200" Height="200"/>
                <Label Content="First record" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"></Label>
                <Label Content="100$" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"></Label>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="0">
                <Image Name="Image2" Width="200" Height="200"/>
                <Label Content="Second record" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"></Label>
                <Label Content="200$" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"></Label>
            </StackPanel>
            <StackPanel Grid.Column="2" Grid.Row="0">
                <Image Name="Image3" Width="200" Height="200"/>
                <Label Content="Third record" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"></Label>
                <Label Content="300$" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"></Label>
            </StackPanel>

            <StackPanel Grid.Column="0" Grid.Row="1">
                <Image Name="Image5" Width="200" Height="200"/>
                <Label Content="Fifth record" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"></Label>
                <Label Content="500$" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"></Label>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="1">
                <Image Name="Image6" Width="200" Height="200"/>
                <Label Content="Sixth record" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"></Label>
                <Label Content="600$" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"></Label>
            </StackPanel>
            <StackPanel Grid.Column="2" Grid.Row="1">
                <Image Name="Image7" Width="200" Height="200"/>
                <Label Content="Seventh record" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"></Label>
                <Label Content="700$" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"></Label>
            </StackPanel>
        </Grid>

        
    </DockPanel>
</Page>
