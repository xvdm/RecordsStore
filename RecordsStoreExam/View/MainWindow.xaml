            <Label Foreground="White" FontSize="30" Padding="27" Margin="0" HorizontalContentAlignment="Right" DockPanel.Dock="Right" Width="340" Content="Profile" Name="LabelProfile" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" MouseDown="LabelProfile_MouseDown"></Label>
            <Label Height="100" Content="8-800-555-3535" Foreground="White" FontSize="30" Padding="27" Margin="15,0,15,15 " DockPanel.Dock="Right" HorizontalAlignment="Right"></Label>
        </DockPanel>
        <Frame x:Name="frame" Margin="0,100,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
